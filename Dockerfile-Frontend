# Dockerfile-Frontend

# --- STAGE 1: Build Phase (Node) ---
FROM node:20-alpine as builder

# Set the working directory
WORKDIR /app

# Copy dependency files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code (including 'src' and 'index.html')
COPY . .

# Run the build command (Vite/React often creates a 'dist' folder)
RUN npm run build

# --- STAGE 2: Run Phase (Nginx) ---
FROM nginx:alpine

# Copy the compiled static files from the builder stage
# Assuming 'npm run build' outputs to a 'dist' directory
COPY --from=builder /app/dist /usr/share/nginx/html

# Expose port 80 
EXPOSE 80

# Command to start Nginx
CMD ["nginx", "-g", "daemon off;"]